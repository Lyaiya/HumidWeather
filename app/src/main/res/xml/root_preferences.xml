<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/setting_appearance_title">

        <rikka.preference.SimpleMenuPreference
            app:defaultValue="@string/pref_default_value_dark_theme"
            app:entries="@array/setting_dark_theme_entries"
            app:entryValues="@array/pref_entry_values_dark_theme"
            app:key="@string/pref_key_dark_theme"
            app:title="@string/setting_dark_theme_title" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/setting_basis_title">

        <Preference
            app:key="@string/pref_key_unit"
            app:title="@string/setting_unit_title" />

    </PreferenceCategory>

</PreferenceScreen>